---
import WhatsAppButton from './WhatsAppButton.astro';
import SocialMediaIcons from './SocialMediaIcons.astro';
---

<footer class="bg-primary-900 text-white">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-3 mb-4">
          <div class="w-10 h-10 bg-gradient-to-br from-coral-500 to-coral-600 rounded-full flex items-center justify-center">
            <span class="text-white font-bold text-lg">L</span>
          </div>
          <span class="text-2xl font-bold">LbisTech</span>
        </div>
        <p class="text-gray-300 mb-4 max-w-md">
          Empowering professionals with cutting-edge technology education. 
          Master the skills that matter in today's digital landscape.
        </p>
        <div class="space-y-2">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-coral-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            <span class="text-gray-300">team@lbistech.com</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-coral-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            <span class="text-gray-300">+92 03 111 088 881</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-coral-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-gray-300">Lahore, Pakistan</span>
          </div>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-xl font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/courses" class="text-gray-300 hover:text-coral-500 transition-colors">Courses</a></li>
          <li><a href="/about" class="text-gray-300 hover:text-coral-500 transition-colors">About Us</a></li>
          <li><a href="/contact" class="text-gray-300 hover:text-coral-500 transition-colors">Contact</a></li>
          <li><a href="/faq" class="text-gray-300 hover:text-coral-500 transition-colors">FAQ</a></li>
        </ul>
      </div>
      
      <!-- Social Media -->
      <div>
        <h3 class="text-xl font-semibold mb-4">Follow Us</h3>
        <SocialMediaIcons size="md" />
        
        <!-- WhatsApp Community Button -->
        <div class="mt-6">
          <WhatsAppButton size="md" />
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 mt-8 pt-8 text-center">
      <p class="text-gray-400">
        Â© 2024 LbisTech. All rights reserved. | 
        <a href="/privacy" class="hover:text-coral-500">Privacy Policy</a> | 
        <a href="/terms" class="hover:text-coral-500">Terms of Service</a>
      </p>
    </div>
  </div>
</footer>