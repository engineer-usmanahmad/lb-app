<!-- Minimized version -->
<div class="need-help-minimized fixed bottom-6 right-6 z-50 bg-coral-500 hover:bg-coral-600 rounded-full p-4 shadow-2xl cursor-pointer transition-all duration-300 transform hover:scale-110 hidden">
  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
  </svg>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const helpCard = document.querySelector('.need-help-card');
    const minimizedCard = document.querySelector('.need-help-minimized');
    const closeButton = document.querySelector('.close-help-card');
    
    // Close card functionality
    closeButton?.addEventListener('click', function() {
      helpCard?.classList.add('hidden');
      minimizedCard?.classList.remove('hidden');
    });
    
    // Reopen card functionality
    minimizedCard?.addEventListener('click', function() {
      minimizedCard.classList.add('hidden');
      helpCard?.classList.remove('hidden');
    });
    
    // Auto-hide on mobile after 10 seconds
    if (window.innerWidth < 768) {
      setTimeout(() => {
        helpCard?.classList.add('hidden');
        minimizedCard?.classList.remove('hidden');
      }, 10000);
    }
  });
</script>

<style>
  @media (max-width: 768px) {
    .need-help-card {
      bottom: 1rem;
      right: 1rem;
      max-width: calc(100vw - 2rem);
    }
    
    .need-help-minimized {
      bottom: 1rem;
      right: 1rem;
    }
  }
</style>